<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SpaceHackathon_2024.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SpaceHackathon_2024.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SpaceHackathon 2024" >
    <TabBar>
        <ShellContent 
            Title="Чат сука"
            Icon="pornhub.svg"
            ContentTemplate="{DataTemplate views:ChatPage}"
            Route="ChatPage" />
        <ShellContent 
            Title="Профиль"
            Icon="profile.png"
            ContentTemplate="{DataTemplate views:SignInPage}"
            Route="SignInPage" />
        <ShellContent 
            Title="Еще"
            Icon="menu.png"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="ProfilePage" />
    </TabBar>
</Shell>

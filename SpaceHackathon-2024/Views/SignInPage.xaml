<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SpaceHackathon_2024.ViewModels"
             x:Class="SpaceHackathon_2024.Views.SignInPage"
             x:DataType="viewmodels:SignInViewModel">
            
    <ContentPage.Content>
        <Grid
            BackgroundColor="Black"
            VerticalOptions="Fill">
            <Image
                Aspect="AspectFill"
                Opacity="0.5"
                Source="https://www.mtsbank.ru/upload/static/news/2020/IMG_0744.jpg"
                ></Image>
            <Border
                HeightRequest="400"
                Margin="30"
                Padding="20">
                <VerticalStackLayout
                    Spacing="20">
                    <Image
                        Margin="0,30"
                        HeightRequest="30"
                        Source="mts_logo3">
                        
                    </Image>
                    <Entry 
                        HeightRequest="50"
                        Placeholder="Имя пользователя" 
                        Text="{Binding PhoneNumber }" />
                    <Entry
                        HeightRequest="50"
                        Placeholder="Пароль"
                        IsPassword="True"
                        Text="{Binding Password }" />

                    <Button 
                        Text="Войти" 
                        Command="{Binding SignInCommand}" 
                        HorizontalOptions="Fill" />

                    <Label HorizontalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Нет аккаунта?" />
                                <Span Text=" "/>
                                <Span Text="Зарегистрироваться" TextColor="Blue" 
                                      TextDecorations="Underline">
                                    <Span.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding GoToSignUpPageCommand}" />
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SpaceHackathon_2024.ViewModels"
             x:Class="SpaceHackathon_2024.Views.SignInPage"
             x:DataType="viewmodels:SignInViewModel">
            
    <ContentPage.Content>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <Entry Placeholder="Имя пользователя" Text="{Binding Username }" />
            <Entry Placeholder="Пароль" IsPassword="True" Text="{Binding Password }" />

            <Button Text="Войти" Command="{Binding SignInCommand}" HorizontalOptions="Fill" />

            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Нет аккаунта?" />
                        <Span Text="Зарегистрироваться" TextColor="Blue" 
                              TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SignUpCommand}" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaceHackathon_2024.Views.StorePage"
             Title="StorePage"
             >
    <CollectionView ItemsSource="{Binding Products}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="10" HasShadow="True">
                    <StackLayout>
                        <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="150" />
                        <Label Text="{Binding Name}" FontSize="Medium" />
                        <Label Text="{Binding Price, StringFormat='{}{0:C}'}" FontSize="Small" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaceHackathon_2024.Views.SearchColleagePage"
             xmlns:local ="clr-namespace:SpaceHackathon_2024.ViewModels"
             xmlns:models ="clr-namespace:SpaceHackathon_2024.Models"
             x:DataType="local:SearchColleageViewModel">
    <ContentPage.Content>
        <ScrollView>
            
            <VerticalStackLayout
                Padding="10"
                Spacing="10">

                <VerticalStackLayout
                    Spacing="10"
                    Margin="0,10">
                    <Grid
                        ColumnSpacing="10"
                        ColumnDefinitions="*,auto">
                        <Entry 
                            Grid.Column="0"
                            Placeholder="Введите имя"
                            x:Name="NameEntry"
                            HorizontalOptions="FillAndExpand" />
                        <ImageButton
                            Grid.Column="1"
                            Source="settings_sliders"
                            WidthRequest="25"
                            HeightRequest="25">
                            
                        </ImageButton>
                    </Grid>

                    <Button 
                        Text="Найти коллегу"
                        Clicked="SearchButton_Clicked_Async"
                        HorizontalOptions="FillAndExpand"/>
                </VerticalStackLayout>

                <VerticalStackLayout 
                    x:Name="ResultsListView"
                    Spacing="10"
                    BindableLayout.ItemsSource="{Binding SearchResults}">
                        <BindableLayout.ItemTemplate>
                        <DataTemplate 
                            x:DataType="models:User">
                            <Border
                                Padding="10">
                                <Grid
                                    ColumnSpacing="10"
                                    ColumnDefinitions="auto, *, auto">
                                    <Image
                                        WidthRequest="50"
                                        HeightRequest="50"
                                        Aspect="AspectFill"
                                        Source="{Binding AvatarURL}"
                                        Grid.Column="0">
                                        <Image.Clip>
                                            <EllipseGeometry
                                                Center="25,25"
                                                RadiusX="25"
                                                RadiusY="25"/>
                                        </Image.Clip>
                                    </Image>
                                    <Grid
                                        Grid.Column="1"
                                        VerticalOptions="Center"
                                        RowDefinitions="auto,auto">
                                        <Label
                                            Grid.Row="0"
                                            Text="{Binding FullName}"
                                            Style="{StaticResource Body}"/>
                                        <Label
                                            Grid.Row="1"
                                            Text="Подразделение"
                                            TextColor="{StaticResource Gray400}"
                                            Style="{StaticResource Body}"/>
                                    </Grid>
                                    <ImageButton
                                        Clicked="ProfileButton_Clicked"
                                        Grid.Column="2"
                                        Margin="0,0,5,0"
                                        Source="angle_right"
                                        WidthRequest="20"
                                        HeightRequest="20">
                                    </ImageButton>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>

                </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>